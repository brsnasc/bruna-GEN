/*
//1.	Faça um programa que receba a idade de uma pessoa e mostre na saída em qual categoria ela se encontra:
I.	10-14 infantil
II.	15-17 juvenil
III. 18-25 adulto//
*/

fun main() {

    println("Olá, seja bem-vinde. Por favor, insira a idade: ")

    val idade = readln().toInt()
    when (idade) {

        in 10..14 -> println("Você pertence à categoria Infantil.")
        in 15..17 -> println("Você pertence à categoria Juvenil.")
        in 18..25 -> println("Você pertence à categoria Adulto.")

        else -> println("Desculpe, não conseguimos encontrar sua categoria")
    }
}
